{% extends 'base.html.twig' %}

{% block body %}
{#
-faire un formulaire en post avec une liste déroulante
pour tous les utilisateurs et un bouton submit
- faire en sorte de ne pas avoir les utilisateurs qui appartiennent deja à l'équipe dans la liste

#}

<form method="post">
       <select name="user">
           {% for user in users  %}
               {% if not team.users.contains(user) %}
                   <option value="{{ user.id }}">{{ user }}</option>
               {% endif %}
           {% endfor %}
       </select>
        <button type="submit">Enregistrer</button>
</form>

{% endblock %}